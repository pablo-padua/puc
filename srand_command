#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<time.h>
#include<string.h>
#include<math.h>

int main()
{
    int cara=0,coroa=1,i,selection;
    srand(time(NULL));
    printf("Escolha cara(0) ou coroa(1):");
    scanf("%d",&selection);
    for (i=0;i<10;i++) {
        if (selection==coroa)
        {
            printf("%d ", rand() % 1);
            printf("\n");
        }
        if (selection==cara){
            printf("%d ", rand() % 1);
            printf("\n");
        }
    }
    return 0;
    getch();
}


//Mesmo quando utilizo o "rand() %0 + 1" ou "rand() %1 +0" resulta em apenas 0 e nÃ£o em numeros aleatorios entre 0 e 1
