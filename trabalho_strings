void menu();
int main()
{
    int opcao;
    menu();
    printf("Escolha sua opcao: ");
    scanf("%d",&opcao);
    while(opcao!=11)
    {
        switch(opcao)
        {
        case 1:
            atividade1();
            break;
        case 2:
            atividade2();
            break;
        case 3:
            atividade3();
            break;

        case 4:
            atividade4();
            break;
        case 5:
            atividade5();
            break;
        case 6:
            atividade6();
            break;
        case 7:
            atividade7();
            break;
        case 8:
            atividade8();
            break;
        case 9:
            atividade9();
            break;
        case 10:
            atividade10();
            break;

        }

        setlocale(LC_ALL,"portuguese");
        system("PAUSE");
        menu();
        printf("Escolha o número da atividade:");
        scanf("%d",&opcao);

    }
    system("CLS");
    printf("FIM DO PROGRAMA!\n");
    return 0;

}

